const currentPath = Astro.url.pathname;
let is_wordpress = currentPath.toLocaleLowerCase().endsWith(".php") || currentPath.toLocaleLowerCase().startsWith("/wp-");
if (is_wordpress) {
    let headers = { 
        "Content-Type": "text/plain; charset=utf-8"
    };
    let body = `
Try To become a Hacker :>
Hmm maybe this page is not build using "Wordpress" or "PHP" :>
if you want to help me build this page please contact me through discord support server.
or contact us if hacking success for bounty.
    `.trim();
    return new Response(body, { headers, status: 200 });
}
